{
  "expo": {
    "name": "TIMECHECK_APP",
    "slug": "TIMECHECK_APP",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logotipotimecheck.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/TimechekMovil.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "shouldUseActivityState": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Permitir acceso a la c√°mara",
        "NSPhotoLibraryUsageDescription": "Permitir acceso a la biblioteca de fotos",
        "NSPhotoLibraryAddUsageDescription": "Permitir guardar fotos en la biblioteca"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "package": "com.aldana212.TIMECHECK_APP",
      "shouldUseActivityState": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "0bb2671a-979d-4257-bf0a-7f211f9c12d6"
      }
    },
    "build": {
      "preview": {
        "android": {
          "buildType": "apk"
        }
      },
      "preview2": {
        "android": {
          "gradleCommand": ":app:assembleRelease"
        }
      },
      "preview3": {
        "developmentClient": true
      },
      "production": {}
    }
    
  }
}